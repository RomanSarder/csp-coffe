{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "types": ["node"],
    "paths": {
      "@Lib/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}