{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "lib": ["esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "paths": {
      "@Lib/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}